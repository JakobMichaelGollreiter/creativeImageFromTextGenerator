server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www/html/;

	index index.html index.htm;

	server_name _;

	location /api/images {
		alias /var/www/html/images;
        #expires 1d;
        #add_header Cache-Control "public, no-transform";
        try_files $uri =404;
    }

	location / {
		include uwsgi_params;
		uwsgi_pass unix:/usr/local/bin/api/api.sock;
	}
}
